@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dto.DTOS.NewsDtos.NewsUpdateDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="//cdn.ckeditor.com/4.14.1/full/ckeditor.js"></script>



<form class="form-group" method="post" enctype="multipart/form-data">
    <br /><br />
    <h2 class="text-center"> Haberi Güncelle</h2>
    <div class="form-group">
        <label class="form-control-sm"><h4>Haber Başlığı</h4></label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        <div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="form-control-sm"><h4>Kapak Fotoğrafı</h4></label>

        <input class="form-control" type="file" name="Imagefile" id="Imagefile" />
        <div>
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label class="form-control-sm"><h4>Kısa Açıklama</h4></label>
        @Html.TextAreaFor(model => model.ShortDescription, new { @class = "form-control" })
        <div>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
            <label class="form-control-sm"><h4>Kategori</h4></label>
            <select class="form-control select-dropdown warning" id="CategoryId" name="CategoryId">
                @foreach (var item in ViewBag.category)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    <div class="form-group">
        <label class="form-control-sm"><h4>Detay Fotoğrafı</h4></label>
        <input class="form-control" type="file" name="DetailImageFile" id="DetailImageFile" />
        <div>
            <span asp-validation-for="DetailImagePath" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="form-control-sm"><h4>Haber Detayı</h4></label>
        @Html.TextAreaFor(model => model.Description, new { @id = "editor1" })
        <script type="text/javascript">
            var editor = CKEDITOR.instances['editor1'];
            if (editor) { editor.destroy(true); }
            CKEDITOR.replace('editor1', {
                enterMode: CKEDITOR.ENTER_BR,
            });
            CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
        </script>
        <div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>


    <div asp-validation-summary="ModelOnly"></div>
    <div class="card-footer">
        <input type="submit" class="btn btn-success pull-right" value="Güncelle" />
    </div>


    <br /><br /><br /><br />
</form>

