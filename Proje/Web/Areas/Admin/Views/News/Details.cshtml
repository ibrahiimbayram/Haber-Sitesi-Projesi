
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@foreach (var it in ViewBag.detail)
{
    <div class="container">

        <div class="text-center">
            <img src="~/img/@it.DetailImagePath" width="800px" height="420" />
        </div>

        <br />
        <div class="form-group text-center"><h1>@it.Title</h1></div>
        <br />
        <p class="card-text">
            <div class="metin">

                @it.ShortDescription
                <br />

                @Html.Raw(@it.Description)

            </div>
        </p>

    </div>


}