@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Dto.DTOS.AnnouncementDto.AnnouncementAddDtos
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="//cdn.ckeditor.com/4.14.1/full/ckeditor.js"></script>


<h2 class="text-center">Duyuru Ekle</h2>
<br />
<form class="form-group" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label class="form-control-sm"><h4>Duyuru Başlığı</h4></label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        <div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="form-control-sm"><h4>Kapak Fotoğrafı</h4></label>

        <input class="form-control" type="file" name="Image" id="Image" />
    </div>


    <div class="form-group">
        <label class="form-control-sm"><h4>Kısa Açıklama</h4></label>
        @Html.TextAreaFor(model => model.ShortDescription, new { @class = "form-control" })
        <div>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="form-control-sm"><h4>Kategori</h4></label>
        <select class="form-control select-dropdown warning" id="CategoryId" name="CategoryId">
            @foreach (var item in ViewBag.category)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class="form-control-sm"><h4>Detay Fotoğrafı</h4></label>
        <input class="form-control" type="file" name="DetailImage" id="DetailImage" />
    </div>

    <div class="form-group">
        <label class="form-control-sm"><h4>Duyuru Detayı</h4></label>
        @Html.TextAreaFor(model => model.Description, new { @id = "editor1" })
        <script type="text/javascript">
    var editor = CKEDITOR.instances['editor1'];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace('editor1', {
        enterMode: CKEDITOR.ENTER_BR,
    });
    CKFinder.setupCKEditor(null, '@Url.Content("~/ckeditor/ckfinder/")');
        </script>
        <div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly"></div>
    <div class="card-footer">
        <input type="submit" class="btn btn-success pull-right" value="Kaydet" />
    </div>


    <br /><br /><br /><br />
</form>

